<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".formmenu.FormMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="#1D476F"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="66dp"
            android:layout_height="59dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/iconmecanica" />

        <LinearLayout
            android:layout_width="281dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtVNomeMecanica"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#1D476F"
                android:fontFamily="sans-serif-black"
                android:gravity="center_vertical"
                android:letterSpacing="0.03"
                android:text="Mecânica X"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtVCnpj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1D476F"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center_vertical"
                android:letterSpacing="0.01"
                android:text="11.111.111/1111-11"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVNomeUsuario"
            android:layout_width="284dp"
            android:layout_height="55dp"
            android:background="@drawable/backgroundlinhacinza"
            android:drawableLeft="@drawable/ic_personal"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:text="Usuário"
            android:textColor="#000000"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="34dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:background="#00F4F4F4"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sair" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal|center_vertical">

        <ImageButton
            android:id="@+id/btnAgendar"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/cantoarredondadobotao"
            android:scaleType="fitCenter"
            android:src="@drawable/agendar"
            tools:src="@drawable/agendar" />

        <ImageButton
            android:id="@+id/btnVeiculos"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:background="@drawable/cantoarredondadobotao"
            android:scaleType="fitCenter"
            android:src="@drawable/veiculo"
            tools:src="@drawable/veiculo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal|center_vertical">

        <ImageButton
            android:id="@+id/btnOrcamentos"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/cantoarredondadobotao"
            android:scaleType="fitCenter"
            android:src="@drawable/orcamento"
            tools:src="@drawable/orcamento" />

        <ImageButton
            android:id="@+id/btnConsultar"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:background="@drawable/cantoarredondadobotao"
            android:scaleType="fitCenter"
            android:src="@drawable/consultar"
            tools:src="@drawable/consultar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal|center_vertical">

        <ImageButton
            android:id="@+id/btnConta"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/cantoarredondadobotao"
            android:scaleType="fitCenter"
            android:src="@drawable/confgconta"
            tools:src="@drawable/confgconta" />

        <ImageButton
            android:id="@+id/btnServicos"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:background="@drawable/cantoarredondadobotao"
            android:scaleType="fitCenter"
            android:src="@drawable/servicos"
            tools:src="@drawable/servicos" />
    </LinearLayout>
</LinearLayout>