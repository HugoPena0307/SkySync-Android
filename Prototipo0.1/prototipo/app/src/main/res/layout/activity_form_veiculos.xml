                android:paddingLeft="10dp"
                android:text="Cor: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textAno3"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
